---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/tailwind.css';
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
		<title>{Astro.props.title}</title>
		<script defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>
	</head>
<body class="min-h-screen bg-[url('img/grid-bg.webp')] bg-fit bg-center relative pb-10">
  <!-- Venstre billede -->
  <img 
    src="/img/holding-kalimba.webp" 
    alt="Venstre dekoration" 
    class="hidden lg:block absolute -bottom-10 left-0 w-48 h-auto z-10"
  />

  <!-- Højre billede -->
  <img 
    src="/img/instax.webp" 
    alt="Højre dekoration" 
    class="hidden lg:block absolute top-110 right-0 w-56 h-auto z-10"
  />
		<header>
			<Header></Header>
		</header>
		
		<main>
			<slot />
		</main>

		<footer>
			<Footer></Footer>
		</footer>
			
	</body>
</html>